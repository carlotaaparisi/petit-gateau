<% include ../partials/header %>
 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>This is the Work page</h1>
             <p>View our hand-crafted projects</p>
             <p>
                <a class="btn btn-primary btn-large" href="/work/new">Add New Project</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% projects.forEach(function(project){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= project.image %>">
                   <div class="caption">
                       <h4><%= project.name %></h4>
                   </div>
                    <p>
                       <a href="/work/<%= project._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>